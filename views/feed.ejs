								<textarea name="caption" cols="40" rows="5" placeholder="Need some help?"></textarea>
								<input type="submit" value="Upload">
							</form>
            </div><!-- Post Create Box End-->





            <!-- Post Content
            ================================================= -->
							<!-- <ul class="posts"> -->
