          <!-- Newsfeed Common Side Bar Right
          ================================================= -->

					<div class="col-md-2 static">
						<div class="suggestions" id="sticky-sidebar">
							<h4 class="grey">Help offers:</h4>
							<div class="follow-user">
								<ul class="" id="">

									<% for(var i=0; i<requests.length; i++) {%>

										<% if (requests[i].love === "") { %>
										<li class="message">
											<p class="helpingP"><i class="fas fa-hands-helping"></i></p>
											<span class="spans" id="<%= requests[i]._id %>"><%= requests[i].senderEmail %></span><br>
											<span><%= requests[i].requests %></span><br>
											<% if (requests[i].accept === "") { %>
											<button class="accept" type="button" name="button" id="<%= requests[i]._id %>"><i class="fas fa-hands-helping"></i></button>
											<button class="trashy" type="button" name="button" id="<%= requests[i]._id %>"><i class="fas fa-trash-alt"></i></button>
											 <% } %>
											<% if (requests[i].accept === "Accepted" && requests[i].replied ==="") { %>
												<form action="/test" method="POST">
													 <input id="senderId" type="hidden" name="recieverId" value="<%= requests[i].senderId %>">
													 <input id="thisMessage" type="hidden" name="thisMessage" value="<%= requests[i].requests %>">
													 <input class="newForm" type="text" name="message" value=""><br>
													 <button class="done" id="<%= requests[i]._id %>" type="submit" name="button" >Reply</button>
												 </form>
													 <% } %>
														<% if (requests[i].replied === "yes") { %>
															<p id="NotThisOne">Was this helpful?</p>
															<button class="yes" type="button" name="button" id="<%= requests[i]._id %>">Yes</button>
															<button class="no" name="button" id="<%= requests[i]._id %>">No</button>
															<% } %>
															<% if (requests[i].helpful === "yes") { %>
																<p>Send some love</p>
																<button class="love" type="button" id="<%= requests[i]._id %>">Love</button>
																<% } %>
																<% if (requests[i].helpful === "no") { %>
																	<p>Delete message</p>
																	<button id="<%= requests[i]._id %>" class="notHelpfulDelete" type="button" name="button">Bye</button>

															<% } %>
															<% } %>
															<% if (requests[i].love === "sent") { %>
																<p>Your Love has been sent</p>
																<button id="<%= requests[i]._id %>" class="loveDelete" type="button">Delete</button>
															<% } %>



										</li>

									<% } %>
